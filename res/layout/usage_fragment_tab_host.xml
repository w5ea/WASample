<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<FrameLayout android:id="@+id/tab_content"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"/>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_bar_height"
    android:clipChildren="false" android:layout_gravity="bottom"> 
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" 
        android:layout_gravity="bottom" 
        android:background="@drawable/shape_dot_highlighted"
        android:paddingLeft="@dimen/tab_bar_item_margin_t_b" 
        android:paddingRight="@dimen/tab_bar_item_margin_t_b"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_bar_normal_item_height"
        android:baselineAligned="false"
        android:orientation="horizontal" 
        android:clipChildren="false"
        android:layout_gravity="bottom">

        <RelativeLayout android:id="@+id/tab_item_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_normal_item_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/tab_bar_item_margin_l_r"
            android:layout_marginRight="@dimen/tab_bar_item_margin_l_r"
            android:layout_weight="1"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/tab_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher"
                android:clickable="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="@string/tab_bar_item_title1"
                android:textColor="@color/tab_bar_title"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/tab_bar_item_text_size"
                />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/tab_item_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_normal_item_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/tab_bar_item_margin_l_r"
            android:layout_marginRight="@dimen/tab_bar_item_margin_l_r"
            android:layout_weight="1"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/tab_btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"
                android:clickable="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/tab_bar_item_title2"
                android:textColor="@color/tab_bar_title"
                android:textSize="@dimen/tab_bar_item_text_size"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/tab_item_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_normal_item_height"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/tab_bar_item_margin_l_r"
            android:layout_marginRight="@dimen/tab_bar_item_margin_l_r"
            android:layout_weight="1"
            android:clickable="true"
            >

            <ImageView
                android:id="@+id/tab_btn_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" 
                android:clickable="false"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/tab_bar_item_title3"
                android:textColor="@color/tab_bar_title"
                android:textSize="@dimen/tab_bar_item_text_size"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
</LinearLayout>